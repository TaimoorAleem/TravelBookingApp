@model TravelBookingApp.Models.FlightBookingInputModel

<h2>Enter Booking Details</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FlightType)
        @Html.EnumDropDownListFor(model => model.FlightType, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.FlightType, "", new { @class = "text-danger" })
    </div>

    <!-- Add more input fields for DepartureLocation, ArrivalLocation, DepartureDate, ArrivalDate -->

    <div class="form-group">
        <input type="submit" value="Search Flights" class="btn btn-primary" />
    </div>
}
