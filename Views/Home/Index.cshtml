@model TravelBookingApp.Models.BookingViewModel

@{
    ViewData["Title"] = "Welcome to Rihla Travels";
}

<div class="container-fluid">
    <div class="row">
        <h5>Welcome to</h5>
        <h1>Rihla Travels </h1>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center">
                    <h4>Flight Bookings</h4>
                </div>
                <div class="card-body">
                    @if (Model.FlightBookings != null && Model.FlightBookings.Any())
                    {
                        var index = 1;
                        foreach (var booking in Model.FlightBookings)
                        {
                            <p>Booking # @index</p>
                            <!-- Additional flight booking details here -->
                            index++;
                        }
                    }
                    else
                    {
                        <p>You have no flight bookings.</p>
                    }
                </div>
                <a asp-controller="FlightBookings" asp-action="Create" class="btn btn-outline-primary">Create Booking</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center">
                    <h4>Hotel Bookings</h4>
                </div>
                <div class="card-body">
                    @if (Model.HotelBookings != null && Model.HotelBookings.Any())
                    {
                        var index = 1;
                        foreach (var booking in Model.HotelBookings)
                        {
                            <p>Booking # @index</p>
                            <!-- Additional hotel booking details here -->
                            index++;
                        }
                    }
                    else
                    {
                        <p>You have no hotel bookings.</p>
                    }
                </div>
                <a asp-controller="HotelBookings" asp-action="Create" class="btn btn-outline-primary">Create Booking</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center">
                    <h4>Car Bookings</h4>
                </div>
                <div class="card-body">
                    @if (Model.CarBookings != null && Model.CarBookings.Any())
                    {
                        var index = 1;
                        foreach (var booking in Model.CarBookings)
                        {
                            <p>Booking # @index</p>
                            <p>Make: @booking.SelectedCar.Make</p>
                            <!-- Additional car booking details here -->
                            index++;
                        }
                    }
                    else
                    {
                        <p>You have no car bookings.</p>
                    }
                </div>
                <a asp-controller="CarBookings" asp-action="Create" class="btn btn-outline-primary">Create Booking</a>
            </div>
        </div>
    </div>
</div>