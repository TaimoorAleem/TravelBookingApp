@model TravelBookingApp.Models.CarBooking

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<h1>Confirm the booking</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div>
    <dl class="row">
        <dt class="col-sm-2">ID: </dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Name: </dt>
        <dd class="col-sm-10">@Model.SelectedCar</dd>
        
        <dt class="col-sm-2">Name: </dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Email: </dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Phone No. : </dt>
        <dd class="col-sm-10">@Model.PhoneNo</dd>
        <dt class="col-sm-2">Pickup Location: </dt>
        <dd class="col-sm-10">@Model.Pickup</dd>
        <dt class="col-sm-2">Dropoff Location: </dt>
        <dd class="col-sm-10">@Model.Dropoff</dd>
        <dt class="col-sm-2">Pickup Time: </dt>
        <dd class="col-sm-10">@Model.PickupTime</dd>
        
        
        

        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
       

        
    </dl>
    
</div>

