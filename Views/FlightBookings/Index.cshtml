@model IEnumerable<TravelBookingApp.Models.FlightBooking>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-color: white;
        background-image:url('https: //happyyoungpower.nl/wp-content/uploads/sites/7/2017/01/happy-journey-plane.jpg')
    }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassportNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfCompanions)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.FlightClass)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PassportNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfCompanions)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.FlightClass)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FlightBookingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.FlightBookingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.FlightBookingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
