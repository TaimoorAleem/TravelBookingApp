@model IEnumerable<TravelBookingApp.Models.FlightBooking>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Flight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fcategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FBookingClass)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Flight.AirlineCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fcategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FBookingClass)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FlightBookingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FlightBookingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FlightBookingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
