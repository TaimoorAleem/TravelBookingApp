@model List<TravelBookingApp.Models.FlightBooking>

<h2>Flight Booking Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>Flight</th>
            <th>Email</th>
            <th>Passport Number</th>
            <th>Phone Number</th>
            <th>Companions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Flight.AirlineName - @booking.Flight.DepartureCity to @booking.Flight.Destination</td>
                <td>@booking.Email</td>
                <td>@booking.PassportNumber</td>
                <td>@booking.PhoneNumber</td>
                <td>@booking.NumberOfCompanions</td>
            </tr>
        }
    </tbody>
</table>
