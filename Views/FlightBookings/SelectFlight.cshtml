@model List<TravelBookingApp.Models.Flight>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
    <style>
        body {
            background-color: white; /* Set the background color to white */
            background-image: url('https://hdqwalls.com/wallpapers/plane-taking-off.jpg'); /* Set the background image */
            background-size: cover; /* Make sure the background image covers the entire body */
            background-repeat: no-repeat; /* Do not repeat the background image */
        }

        h2 {
            color: #333; /* Set the text color to a dark color for better readability */
        }

        table {
            background-color: rgba(255, 255, 255, 0.8); /* Add a semi-transparent white background to the table for better readability */
            margin-top: 20px; /* Add some margin to the top */
        }

        th, td {
            padding: 10px; /* Add padding to table cells for better spacing */
            text-align: left;
        }

        a {
            color: #007bff; /* Set link color to a blue color */
            text-decoration: underline; /* Add underline to links */
        }
    </style>
</head>
<body>
    <h2>Flight Index</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Airline</th>
                <th>Departure City</th>
                <th>Destination</th>
                <th>Departure Time</th>
                <th>Arrival Time</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in Model)
            {
                <tr>
                    <td>@flight.AirlineName</td>
                    <td>@flight.DepartureCity</td>
                    <td>@flight.Destination</td>
                    <td>@flight.DepartureTime</td>
                    <td>@flight.ArrivalTime</td>
                    <td>
                        <a asp-action="Create" asp-route-id="@flight.FlightId">Book</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
