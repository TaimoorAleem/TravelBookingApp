@model TravelBookingApp.Models.FlightBooking

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FlightBooking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Fcategory" class="control-label"></label>
                <select asp-for="Fcategory" class="form-control">
                    @foreach (var category in Enum.GetValues(typeof(TravelBookingApp.Models.FlightBooking.Category)))
                    {
                        <option value="@category">@category</option>
                    }
                </select>
                <span asp-validation-for="Fcategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FBookingClass" class="control-label"></label>
                <select asp-for="FBookingClass" class="form-control">
                    @foreach (var fClass in Enum.GetValues(typeof(TravelBookingApp.Models.FlightBooking.FClass)))
                    {
                        <option value="@fClass">@fClass</option>
                    }
                </select>
                <span asp-validation-for="FBookingClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
